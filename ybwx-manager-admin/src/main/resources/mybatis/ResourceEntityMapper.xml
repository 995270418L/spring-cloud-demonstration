<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ybwx.manager.admin.mapper.ResourceEntityMapper">
    <cache eviction="LRU" type="com.ybwx.common.mysql.cache.MybatisRedisCache"/>
    <resultMap id="BaseResultMap" type="com.ybwx.manager.admin.entity.ResourceEntity">
        <id column="id" property="id"/>
        <result column="created_time" property="createdTime"/>
        <result column="icon" property="icon"/>
        <result column="identifier" property="identifier"/>
        <result column="memo" property="memo"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="priority" property="priority"/>
        <result column="type" property="type" typeHandler="com.ybwx.common.mysql.type.RoleResourceTypeHandler"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="url" property="url"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into a_resource
        <trim prefix="(" suffix=")" suffixOverrides=",">
    <if test="id != null">
            `id`,
    </if>
    <if test="createdTime != null">
            `created_time`,
    </if>
    <if test="icon != null">
            `icon`,
    </if>
    <if test="identifier != null">
            `identifier`,
    </if>
    <if test="memo != null">
            `memo`,
    </if>
    <if test="name != null">
            `name`,
    </if>
    <if test="parentId != null">
            `parent_id`,
    </if>
    <if test="priority != null">
            `priority`,
    </if>
    <if test="type != null">
            `type`,
    </if>
    <if test="updatedTime != null">
            `updated_time`,
    </if>
    <if test="url != null">
            `url`,
    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
    <if test="id != null">
            #{id},
    </if>
    <if test="createdTime != null">
            #{createdTime},
    </if>
    <if test="icon != null">
            #{icon},
    </if>
    <if test="identifier != null">
            #{identifier},
    </if>
    <if test="memo != null">
            #{memo},
    </if>
    <if test="name != null">
            #{name},
    </if>
    <if test="parentId != null">
            #{parentId},
    </if>
    <if test="priority != null">
            #{priority},
    </if>
    <if test="type != null">
            #{type,typeHandler=com.ybwx.common.mysql.type.RoleResourceTypeHandler},
    </if>
    <if test="updatedTime != null">
            #{updatedTime},
    </if>
    <if test="url != null">
            #{url},
    </if>
        </trim>
    </insert>

    <update id="update">
        update a_resource
        <set>
            <if test="createdTime != null">
                `created_time`=#{createdTime},
            </if>
            <if test="icon != null">
                `icon`=#{icon},
            </if>
            <if test="identifier != null">
                `identifier`=#{identifier},
            </if>
            <if test="memo != null">
                `memo`=#{memo},
            </if>
            <if test="name != null">
                `name`=#{name},
            </if>
            <if test="parentId != null">
                `parent_id`=#{parentId},
            </if>
            <if test="priority != null">
                `priority`=#{priority},
            </if>
            <if test="type != null">
                `type`=#{type,typeHandler=com.ybwx.common.mysql.type.RoleResourceTypeHandler},
            </if>
            <if test="updatedTime != null">
                `updated_time`=#{updatedTime},
            </if>
            <if test="url != null">
                `url`=#{url},
            </if>
        </set>
        where `id`=#{id}
    </update>

    <select id="selectList" resultMap="BaseResultMap">
        <include refid="findList"/>
    </select>
    <sql id="findList">
        select
        *
        from a_resource
        <where>
            <if test="id != null">
                and `id`=#{id}
            </if>
                        <if test="idCollection  != null">
                and `id` in
                <foreach collection="idCollection" open="(" close=")" separator="," item="item">
                    #{item}
                </foreach>
            </if>
                    </where>
        ORDER by id desc
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        SELECT
        *
        FROM a_resource
        where `id`=#{id}
    </select>

</mapper>